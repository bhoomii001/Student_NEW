@using WebApplication2.Models
@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white text-uppercase">
        <h4>Student Details</h4>
    </div>
    <div class="card-body ">
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary m-2 justify-content-end" asp-action="AddStudent" asp-controller="Student">Add Student</a>
        </div>

        <table class="table table-bordered table-responsive bg-secondary text-white table-hover">

            <tr>
                <th>Sr No.</th>
                <th>Student Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            @{
                int a = 1;
            }
            @foreach (Student item in Model)
            {
                <tr>
                    <td>@a</td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Age</td>
                    <td>
                        <a asp-action="EditStudent" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>&nbsp;&nbsp;&nbsp;
                        <a asp-action="DeleteStudent" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>
                a++;
            }

        </table>

    </div>

</div>